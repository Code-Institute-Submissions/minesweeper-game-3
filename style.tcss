.header {
    align: center middle;
    text-style: bold;
    color: $primary;
    background: $background;
    height: 3;
    width: 100%;
}

Footer {
    background: $background;
}

.main_container {
    align: center middle;
    border: round $primary;
    background: $primary;
}

.bordered {
    border: round $background;
    border-title-align: center;
    color: $background;
    background: $primary;

    &:focus {
        text-style: bold;
        color: $accent;
        border: heavy $accent;
    }
}

.primary-bg {
    background: $primary;
}

.secondary-bg {
    background: $secondary;
}

.surface-bg {
    background: $surface;
    border: none;
}